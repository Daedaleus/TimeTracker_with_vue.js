<p id="notice"><%= notice %></p>

<h1>Work Logs</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_logs.each do |work_log| %>
      <tr>
        <td><%= work_log.day %></td>
        <td><%= work_log.hours %></td>
        <td><%= link_to 'Show', [work_log.project, work_log ]%></td>
        <td><%= link_to 'Edit', edit_project_work_log_url(project_id: work_log.project.id, id: work_log.id) %></td>
        <td><%= link_to 'Destroy', [work_log.project, work_log ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work Log', new_project_work_log_url %>
